{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug PyBicep",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/BicepGenerator/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/src/BicepGenerator/"
        },
        {
            "name": "debug Go Job.SharedLinkHouseKeeper",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/Jobs/SharedLinkHouseKeeper/src/housekeeper.go",
            "env": {
                "env": "dev"
            }
        },
        {
            "name": "Debug ApiServer",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build API",
            "program": "${workspaceFolder}/src/ApiServer/AzW.Web.API/bin/Debug/net5.0/AzW.Web.API.exe",
            "args": [],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "sourceFileMap": {
                "/Views": "${workspaceRoot}/Views"
            }
        },
        {
            "name": "Debug Job CacheHydrator",
            "type": "coreclr",
            "preLaunchTask": "Func Start Job CacheHydrator",
            "request": "attach",
            "processId": "${command:azureFunctions.pickProcess}"
        },
        {
            "name": "Docker: Python - General",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "general"
            }
        }
    ]
}